{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "nodemon",
    "serve": "node build/app.js",
    "build": "babel ./src --out-dir -d build"
  },
  "dependencies": {
    "@babel/cli": "^7.18.9",
    "@babel/core": "^7.18.9",
    "@babel/node": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "async": "^3.2.4",
    "cookie-parser": "~1.4.4",
    "core-js": "^3.23.5",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^16.0.1",
    "express": "~4.16.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb-memory-server": "^8.7.2",
    "mongoose": "^6.4.0",
    "morgan": "~1.9.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "regenerator-runtime": "^0.13.9"
  },
  "devDependencies": {
    "jest": "^28.1.2",
    "nodemon": "^2.0.16",
    "supertest": "^6.2.4"
  },
  "nodemonConfig": {
    "exec": "NODE_ENV=development npm run build && npm run serve",
    "watch": [
      "src/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
