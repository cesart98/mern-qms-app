{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "npm run prod", 
    "build": "npm-run-all clean transpile", 
    "server": "node ./src/bin/www", 
    "dev": "NODE_ENV=development npm-run-all build server", 
    "prod": "NODE_ENV=production npm-run-all build server", 
    "transpile": "babel ./src --out-dir build", 
    "clean": "rimraf build", 
    "watch:dev": "nodemon", 
    "test": "jest"
  },
  "dependencies": {
    "@babel/cli": "^7.18.9",
    "@babel/core": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "async": "^3.2.4",
    "body-parser": "^1.20.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^16.0.1",
    "express": "~4.16.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb-memory-server": "^8.7.2",
    "mongoose": "^6.4.0",
    "morgan": "~1.9.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "jest": "^28.1.2",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "supertest": "^6.2.4"
  },
  "nodemonConfig": { 
    "exec": "npm run dev",
    "watch": ["src/*", "public/*"],
    "ignore": ["**/__tests__/**", "*.test.js", "*.spec.js"]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
